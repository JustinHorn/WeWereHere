<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />

    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />

    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="container mt-4">
      <div class="row">
        <div class="col align-items-center">
          <form action="/data" method="POST">
            <div class="form-group">
              <input
                type="text"
                class="form-control noSemicolon"
                id="inputName"
                placeholder="Enter Name"
                name="name"
                maxlength="40"
                required
              />
            </div>
            <div class="form-group">
              <textarea
                type="text"
                class="form-control threeLines noSemicolon"
                rows="3"
                id="textareaMessage"
                placeholder="Enter message"
                name="message"
                maxlength="240"
              ></textarea>
            </div>
            <!-- prettier-ignore -->
            <input name="formId" value=<%=formId%> type="text"
            style="display:none"/>
            <div class="form-group">
              <input type="submit" class="form-control" value="Submit" />
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- prettier-ignore -->
    <div class="container mt-5">
      <div id="otherPeople">
        <% users.forEach(function(user,i) {%>
        <div class="row col col-12">
          <p>
            <a data-toggle="collapse" href=<%="#collapse"+i%>
              aria-expanded="false" > <%=user.name%> was here.
            </a> 
            <%=user.timeStr%>
          </p>
          </div>

          <div class="row col">
          <div class="collapse" id=<%="collapse"+i%>>
            <p>
              <%=user.message%>
            </p>
        </div>
      </div>

        <% });%>
      </div>
    </div>

    <script
      src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
      integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
      integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
      crossorigin="anonymous"
    ></script>
    <script src="javascripts/threeLines.js"></script>
    <script src="javascripts/noSemicolon.js"></script>
  </body>
</html>
